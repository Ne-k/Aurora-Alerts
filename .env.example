# Discord webhook URL for legacy webhook script (optional if using the bot)
DISCORD_WEBHOOK=your_main_discord_webhook_url_here

# Optional: Separate webhook URL for testing (if you want to test on a different channel)
TEST_WEBHOOK=your_test_discord_webhook_url_here

# Discord bot credentials (required for bot mode)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_id_here
UPDATE_INTERVAL_HOURS=2
TIMEZONE_NAME=America/Los_Angeles

# Kp threshold for aurora alerts (default: 6.2)
KP_THRESHOLD=6.2

# Location configuration (defaults: Portland, OR)
LATITUDE=45.5152
LONGITUDE=-122.6784
LOCATION_NAME=Portland, OR

# Cloud cover visibility thresholds
CLOUD_COVER_GOOD_MAX=60
CLOUD_COVER_PARTIAL_MAX=80

# GFZ JSON API base URL (used for Kp series)
GFZ_API_URL=https://kp.gfz.de/app/json/
# Optional custom User-Agent for GFZ requests
GFZ_USER_AGENT=AuroraAlertsBot/1.0 (+https://github.com/Ne-k/Aurora-Alerts)

# My Aurora Forecast API (used for additional context)
# The App-User-ID is required by the service. Use any stable identifier (e.g., a UUID) unique to your deployment.
MAF_APP_USER_ID=your_maf_app_user_id_here
# Optional: a realistic User-Agent helps avoid blocks.
MAF_USER_AGENT=My Aurora Forecast/1 CFNetwork/3860.200.71 Darwin/25.1.0

# Optional: OpenWeatherMap fallback for cloud cover when Open-Meteo is unavailable
# Get a key at https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_MAX_CALLS_PER_DAY=900
OPENWEATHER_MIN_INTERVAL_MIN=30
OPENWEATHER_CACHE_TTL_MIN=120
